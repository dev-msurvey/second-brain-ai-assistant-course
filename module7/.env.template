# AI Director Module 7 - Environment Configuration Template
# ========================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file with real credentials to git

# ===================
# MongoDB Configuration (Module 5 - Vector RAG)
# ===================
# Free tier: https://www.mongodb.com/cloud/atlas/register
# Create M0 Free cluster (512 MB storage, shared)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=ai_director
MONGODB_COLLECTION=brand_vectors

# ===================
# HuggingFace Configuration (Module 6 - Image Generation)
# ===================
# Free API token: https://huggingface.co/settings/tokens
# Models available on free tier:
# - stabilityai/stable-diffusion-2-1 (recommended)
# - runwayml/stable-diffusion-v1-5
# - CompVis/stable-diffusion-v1-4
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
HF_IMAGE_MODEL=stabilityai/stable-diffusion-2-1

# ===================
# Edge TTS Configuration (Module 6 - Voice)
# ===================
# No API key needed - free Microsoft service
EDGE_TTS_VOICE_TH=th-TH-PremwadeeNeural
EDGE_TTS_VOICE_EN=en-US-AriaNeural

# ===================
# Model Configuration (Module 4 - LLM)
# ===================
# Path to fine-tuned LoRA model
# Leave empty to use template fallback
MODEL_PATH=../models_me/ai-director-colab/trained_models/lora_model

# ===================
# API Configuration
# ===================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_DEBUG=false

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=change-this-to-a-secure-random-string

# CORS origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===================
# Output Configuration
# ===================
OUTPUT_DIR=./outputs
TEMP_DIR=./temp
MAX_UPLOAD_SIZE_MB=100

# ===================
# Performance Configuration
# ===================
# Image generation
IMAGE_WIDTH=1024
IMAGE_HEIGHT=1024
IMAGE_STEPS=30
IMAGE_GUIDANCE_SCALE=7.5

# Voice generation
VOICE_RATE=+0%
VOICE_VOLUME=+0%
VOICE_PITCH=+0Hz

# Video generation
VIDEO_FPS=30
VIDEO_CODEC=libx264
VIDEO_QUALITY=23  # Lower = better quality (18-28 recommended)

# ===================
# Cache Configuration
# ===================
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=1024

# ===================
# Logging Configuration
# ===================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/ai_director.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# ===================
# Development/Production Mode
# ===================
ENVIRONMENT=development  # development, staging, production

